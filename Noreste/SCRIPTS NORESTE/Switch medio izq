enable
configure terminal
hostname MLS_Medio_Izq
ip routing
ipv6 unicast-routing
no ip domain-lookup
ip domain-name juanmark.com

crypto key generate rsa modulus 1024
ip ssh version 2
username admin secret JuanMark123
line vty 0 4
 login local
 transport input ssh
exit

vtp domain JuanMark
vtp mode client

interface range GigabitEthernet1/0/1 - 2
 switchport trunk encapsulation dot1q
 switchport mode trunk
 switchport nonegotiate
 switchport trunk allowed vlan 97-100
 no shutdown
exit

interface GigabitEthernet1/0/3
 no switchport
 ip address 148.60.0.6 255.255.255.252
 ipv6 address 2006:AFEA:B0CA:0::6/64
 ipv6 rip JUANMARK enable
 no shutdown
exit

interface vlan 97
 ip address 148.60.97.4 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:97::4/64
 ipv6 rip JUANMARK enable
 standby version 2
 standby 1 ip 148.60.97.1
 standby 1 priority 120
 standby 1 preempt
 no shutdown
exit

interface vlan 98
 ip address 148.60.98.4 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:98::4/64
 ipv6 rip JUANMARK enable
 standby version 2
 standby 1 ip 148.60.98.1
 standby 1 priority 120
 standby 1 preempt
 no shutdown
exit

interface vlan 99
 ip address 148.60.99.4 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:99::4/64
 ipv6 rip JUANMARK enable
 standby version 2
 standby 1 ip 148.60.99.1
 standby 1 priority 120
 standby 1 preempt
 no shutdown
exit

interface vlan 100
 ip address 148.60.100.4 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:100::4/64
 ipv6 rip JUANMARK enable
 standby version 2
 standby 1 ip 148.60.100.1
 standby 1 priority 120
 standby 1 preempt
 no shutdown
exit

router rip
 version 2
 network 148.60.0.0
 no passive-interface GigabitEthernet1/0/3
 no auto-summary
 redistribute connected metric 1
exit

ipv6 router rip JUANMARK
exit
do write