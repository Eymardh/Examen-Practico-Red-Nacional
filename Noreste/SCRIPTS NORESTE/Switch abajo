enable
configure terminal
hostname MLS_Dist_Abajo
ip routing
ipv6 unicast-routing
no ip domain-lookup

username admin secret JuanMark123
crypto key generate rsa modulus 1024
line vty 0 4
 login local
 transport input ssh
exit

vtp domain JuanMark
vtp mode client

! STP: Jefe de 99 y 100
spanning-tree mode pvst
spanning-tree vlan 99,100 root primary
spanning-tree vlan 97,98 root secondary

! Troncales
interface range GigabitEthernet1/0/1 - 2
 switchport trunk encapsulation dot1q
 switchport mode trunk
 switchport nonegotiate
 switchport trunk allowed vlan 97-100
 no shutdown
exit

! Puerto Ruteado hacia Router
interface GigabitEthernet1/0/3
 no switchport
 ip address 148.60.0.10 255.255.255.252
 ipv6 address 2006:AFEA:B0CA:0::10/64
 ipv6 rip JUANMARK enable
 no shutdown
exit

! DHCP IPv6 (Referencia)
ipv6 dhcp pool IPV6_JUANMARK
 dns-server 2001:4860:4860::8888
 domain-name juanmark.com
exit

! HSRP (Invertido)
interface vlan 97
 ip address 148.60.97.3 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:97::3/64
 ipv6 nd managed-config-flag
 ipv6 dhcp server IPV6_JUANMARK
 standby version 2
 standby 1 ip 148.60.97.1
 standby 1 priority 100
 standby 1 preempt
 no shutdown
exit

interface vlan 98
 ip address 148.60.98.3 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:98::3/64
 ipv6 nd managed-config-flag
 ipv6 dhcp server IPV6_JUANMARK
 standby version 2
 standby 1 ip 148.60.98.1
 standby 1 priority 100
 standby 1 preempt
 no shutdown
exit

interface vlan 99
 ip address 148.60.99.3 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:99::3/64
 ipv6 nd managed-config-flag
 ipv6 dhcp server IPV6_JUANMARK
 standby version 2
 standby 1 ip 148.60.99.1
 standby 1 priority 150
 standby 1 preempt
 no shutdown
exit

interface vlan 100
 ip address 148.60.100.3 255.255.255.0
 ipv6 address 2006:AFEA:B0CA:100::3/64
 ipv6 nd managed-config-flag
 ipv6 dhcp server IPV6_JUANMARK
 standby version 2
 standby 1 ip 148.60.100.1
 standby 1 priority 150
 standby 1 preempt
 no shutdown
exit

! Ruteo
router rip
 version 2
 network 148.60.0.0
 no passive-interface GigabitEthernet1/0/3
 no auto-summary
 redistribute connected metric 1
exit
ipv6 router rip JUANMARK
exit
do write